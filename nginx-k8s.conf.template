
upstream ${DNS} {
# /etc/hosts ( by metallb )
  server ${EXTERNAL_IP};
}

server {
    listen 80;
    server_name ${DNS};

    location / {
        autoindex on;
        root  /usr/share/nginx/html;
        index index.html;
        try_files $uri $uri/ /index.html =404;

    }
     location /backend/ {

        proxy_pass http://${DNS};
           proxy_http_version 1.1;
          proxy_set_header Upgrade $http_upgrade;
          proxy_set_header connection "upgrade";
      }

}